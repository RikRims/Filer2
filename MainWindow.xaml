<Window x:Class="Filer2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filer2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="Удалить" Margin="258,3,9,10" Grid.Column="1" Grid.Row="1"/>
        <Button Content="Переместить" Margin="102,3,165,10" Grid.Column="1" Grid.Row="1"/>
        
        <StackPanel Name="Files" Grid.Column="1" Grid.Row="0">
            <TextBlock Text="Отметте галочкой форматы файлов, которые хотите удалить или переместить." Margin="15,10,5,5" TextWrapping="Wrap"/>
            <CheckBox x:Name="check_txt" Margin="15,5,5,5" Content="txt"/>
            <CheckBox x:Name="check_png" Margin="15,5,5,5" Content="png"/>
            <CheckBox x:Name="check_jpg" Margin="15,5,5,5" Content="jpg"/>
            <CheckBox x:Name="check_jpeg" Margin="15,5,5,5" Content="jpeg"/>
            <CheckBox x:Name="check_docx" Margin="15,5,5,5" Content="docx"/>
            <CheckBox x:Name="check_xlsx" Margin="15,5,5,5" Content="xlsx"/>
            <CheckBox x:Name="check_pdf" Margin="15,5,5,5" Content="pdf"/>
            <CheckBox x:Name="check_bmp" Margin="15,5,5,5" Content="bmp"/>
            <CheckBox x:Name="check_gif" Margin="15,5,5,5" Content="gif"/>
            <CheckBox x:Name="check_tiff" Margin="15,5,5,5" Content="tiff"/>
            <CheckBox x:Name="check_inx" Margin="15,5,5,5" Content="inx"/>
        </StackPanel>
        <StackPanel Name="Option" Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Выберите путь до папки с файлами:" Margin="15,10,5,5"/>
            <StackPanel Name="Old_addres" Orientation="Horizontal">
                <TextBox x:Name="addresOld" Text="выберите папку" Grid.Column="0" Grid.Row="0" Margin="15,10,5,5" Width="300" Height="20"/>
                <Button x:Name="btn_addres_old" Content="Вставить" Margin="0,10,0,5"/>
            </StackPanel>
            <TextBlock Text="Выберите путь до папки назначения:" Margin="15,10,5,5"/>
            <StackPanel Name="New_addres" Orientation="Horizontal" Visibility="Collapsed">
                <TextBox x:Name="addresNew" Text="выберите папку" Grid.Column="0" Grid.Row="0" Margin="15,5,5,5" Height="20" Width="300"/>
                <Button x:Name="btn_addres_new" Content="Вставить" Margin="0,5,0,5"/>
            </StackPanel>
            <CheckBox x:Name="check_path" Content="Снимите галочку если выберите путь самомтоятельно" Margin="15,10,5,5" IsChecked="True" Click="CheckBox_Checked"/>
        </StackPanel>
    
    </Grid>
</Window>
